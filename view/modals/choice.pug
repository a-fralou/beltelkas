                    .col-md-6.mb-4.mb-md-0
                        button.choice.js-btn-event(type="button" data-bs-toggle="modal" data-bs-target="#pc-modal" data-tariff-plan="premium" data-count-device="3")
                            .choice__count 3
                    .col-md-6
                        button.choice.js-btn-event(type="button" data-bs-toggle="modal" data-bs-target="#pc-modal" data-tariff-plan="premium" data-count-device="4")
